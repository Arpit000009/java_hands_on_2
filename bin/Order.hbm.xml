<?xml version="1.0"?>
<hibernate-mapping>
    <class name="com.training.hibernate.entity.Order" table="orders">
        <id name="orderId" column="orderId">
            <generator class="identity"/>
        </id>
        <property name="orderDate"/>
        <property name="orderType"/>
        <many-to-one name="product" column="prodId"
                     class="com.training.hibernate.entity.Product"
                     not-null="true"/>
    </class>
</hibernate-mapping>
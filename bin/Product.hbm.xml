<?xml version="1.0"?>
<hibernate-mapping>
    <class name="com.training.hibernate.entity.Product" table="product">
        <id name="prodId" column="prodId">
            <generator class="identity"/>
        </id>
        <property name="prodName"/>
        <property name="prodDesc"/>
        <property name="price"/>
        <list name="orders" inverse="true" cascade="all">
            <key column="prodId"/>
            <list-index column="LIST_INDEX"/>
            <one-to-many class="com.training.hibernate.entity.Order"/>
        </list>
    </class>
    </hibernate-mapping>